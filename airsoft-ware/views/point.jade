extends layout

block content
  div(style="z-index: -1; position: absolute; top: 0; bottom: 0; left: 0; right: 0; background-color:#{color};")
  h1 #{point.name} (#{point.ip})
  if point.team !== null
    h1 THIS POINT IS CAPTURED BY #{point.team.name}
    each team in teams
      if team.name !== point.team.name
        form(action="/capture", method="post")
            input(name="team_name", type="hidden", value="#{team.name}")
            button(type="submit")
              span(style="background-color:#{team.color};color:#{team.color};") [--]              
              |   CAPTURE FOR TEAM #{team.name}
        br    
  else
    h1 THIS POINT HAS NOT BEEN CAPTURED
    each team in teams    
        form(action="/capture", method="post")
            input(name="team_name", type="hidden", value="#{team.name}")
            button(type="submit")
              span(style="background-color:#{team.color};color:#{team.color};") [--]  
              |   CAPTURE FOR TEAM #{team.name}
        br
                           